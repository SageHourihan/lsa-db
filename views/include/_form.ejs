 <!-- form handling -->
 <form action="/api/users" method="POST" id="add_user">
    <div class="new_user">
        <div class="form-group">
            <label for="name" class="text-light">Name</label>
            <input type="hidden" name="id" value="">
            <input type="text" name="name" value="" placeholder="Mark Stoenis">
        </div>
        <div class="form-group">
            <label for="Address" class="text-light">Address</label>
            <input type="text" name="address" value="" placeholder="123 Street">
        </div>
        <div class="form-group">
            <label for="dues" class="text-light">Dues</label>
            <div class="radio inline">
                <input type="radio" id="radio-2" name="dues" value="Paid" >
                <label for="radio-2" class="radio-label">Paid</label>
            </div>
            <div class="radio inline">
                <input type="radio" id="radio-3" name="dues" value="Not Paid" >
                <label for="radio-3" class="radio-label">Not Paid</label>
            </div>
            <label for="area" class="text-light">Area</label>
                <input type="number" name="area" placeholder="1" min="1" max="11">
        </div>

        <div class="form-group">
            <label for="status" class="text-light">Status</label>
            <div class="radio inline">
                <input type="radio" id="radio-4" name="status" value="Active" >
                <label for="radio-4" class="radio-label">Active</label>
            </div>
            <div class="radio inline">
                <input type="radio" id="radio-5" name="status" value="Inactive" >
                <label for="radio-5" class="radio-label">Inactive</label>
            </div>
            <label for="cardNumber" class="text-light">Card Number</label>
            <input type="text" name="cardNumber" placeholder="1001" class="formText" style="width:26%">
        </div>

        <div class="form-group">
            <label for="water" class="text-light">On/Off Water</label>
            <div class="radio inline">
                <input type="radio" id="radio-6" name="water" value="On" >
                <label for="radio-6" class="radio-label">On</label>
            </div>
            <div class="radio inline">
                <input type="radio" id="radio-7" name="water" value="Off" >
                <label for="radio-7" class="radio-label">Off</label>
            </div>
            <label for="cardEnabled" class="text-light">Card Enabled</label>
            <div class="radio inline">
                <input type="radio" id="radio-7" name="cardEnabled" value="Yes" >
                <label for="radio-8" class="radio-label">Yes</label>
            </div>
            <div class="radio inline">
                <input type="radio" id="radio-9" name="cardEnabled" value="No" >
                <label for="radio-9" class="radio-label">No</label>
            </div>
        </div>

        <div class="form-group">
            <label for="status" class="text-light">Agreement</label>
            <div class="radio inline">
                <input type="radio" id="radio-10" name="agreement" value="Yes" >
                <label for="radio-10" class="radio-label">Yes</label>
            </div>
            <div class="radio inline">
                <input type="radio" id="radio-11" name="agreement" value="No" >
                <label for="radio-11" class="radio-label">No</label>
            </div>
            <label for="registration" class="text-light">Registration</label>
            <input type="text" name="registration" placeholder="Photo Copy" style="width:30%">
        </div>

        <div class="form-group">
            <label for="wc1" class="text-light">Water Craft 1</label>
            <input type="text" name="wc1" placeholder="Pontoon" style="width:16.5%">
            <label for="mc1Num" class="text-light">MC Number</label>
            <input type="text" name="mc1Num" placeholder="1234 ZZ" style="width:16.5%">
            <label for="mc1Color" class="text-light">MC Color</label>
            <input type="text" name="mc1Color" placeholder="Red" style="width:16.5%">
        </div>

        <div class="form-group">
            <label for="wc2" class="text-light">Water Craft 2</label>
            <input type="text" name="wc2" placeholder="Pontoon" style="width:16.5%">
            <label for="mc2Num" class="text-light">MC Number</label>
            <input type="text" name="mc2Num" placeholder="1234 ZZ" style="width:16.5%">
            <label for="mc1Color" class="text-light">MC Color</label>
            <input type="text" name="mc2Color" placeholder="Red" style="width:16.5%">
        </div>

        <div class="form-group">
            <label for="wc3" class="text-light">Water Craft 3</label>
            <input type="text" name="wc3" placeholder="Pontoon" style="width:16.5%">
            <label for="mc3Num" class="text-light">MC Number</label>
            <input type="text" name="mc3Num" placeholder="1234 ZZ" style="width:16.5%">
            <label for="mc3Color" class="text-light">MC Color</label>
            <input type="text" name="mc3Color" placeholder="Red" style="width:16.5%">
        </div>

        <div class="form-group">
            <label for="wc4" class="text-light">Water Craft 4</label>
            <input type="text" name="wc4" placeholder="Pontoon" style="width:16.5%">
            <label for="mc4Num" class="text-light">MC Number</label>
            <input type="text" name="mc4Num" placeholder="1234 ZZ" style="width:16.5%">
            <label for="mc4Color" class="text-light">MC Color</label>
            <input type="text" name="mc4Color" placeholder="Red" style="width:16.5%">
        </div>

        <div class="form-group">
            <label for="wc5" class="text-light">Water Craft 5</label>
            <input type="text" name="wc5" placeholder="Pontoon" style="width:16.5%">
            <label for="mc5Num" class="text-light">MC Number</label>
            <input type="text" name="mc5Num" placeholder="1234 ZZ" style="width:16.5%">
            <label for="mc5Color" class="text-light">MC Color</label>
            <input type="text" name="mc5Color" placeholder="Red" style="width:16.5%">
        </div>

        <div class="form-group">
            <button type="submit" class="btn text-dark update">Save</button>
        </div>

    </div>
</form>