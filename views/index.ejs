
<!-- include header -->
    <%- include('include/_header') %>
<!-- /include header -->

    <!-- Main Site -->
    <main id="site-main">
        <div class="container">
            <div class="box-nav">
                <a href="/add-user" class="border-shadow">
                    <span class="text-gradient">New User <i class="fas fa-user"></i></span>
                </a>
                    <form action="/import" method="POST" enctype="multipart/form-data" hidden id="form">
                        <label for="excel">Browse Files</label>
                        <input type="file" name="excel" required id="real-import">
                        <input type="submit" value="submit" id="real-submit">
                    </form>
                    <a href="/export" class="border-shadow">
                        <span class="text-gradient">Export <i class='fas fa-file-excel'></i></span>
                    </a>
                    <a href="#" class="border-shadow" id="customImport">
                        <span class="text-gradient">Import <i class="fas fa-file-upload"></i></span>
                    </a>
                    <span id="fileName" hidden>File name</span>
                    <a href="#" class="border-shadow" id="customSubmit" hidden>
                        <span class="text-gradiant">Submit</span>
                    </a>
            </div>
            <!-- form handling -->
            <form action="/" method="POST">
                <table class="table" id="myTable">
                    <thead class="thead-dark">
                        <tr>
                            <th>ID</th>
                            <th>Name</th>
                            <th>Address</th>
                            <th>Dues</th>
                            <th>Status</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        <%- include('include/_show') %>
                    </tbody>
                </table>
            </form>
        </div>
    </main>
<!-- /Main Site -->


<!-- include footer -->
<%- include('include/_footer') %>
<!-- /include footer -->