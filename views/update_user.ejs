<!-- include header -->
<%- include('include/_header') %>
<!-- /include header -->

<!-- Main Site -->
<main id="site-main">
  <div class="container">
    <div class="box-nav d-flex justify-between">
      <div class="filter">
        <a href="/"><i class="fas fa-angle-double-left"></i> All Users</a>
      </div>
    </div>
    <div class="form-title text-center">
      <h2 class="text-dark">Update User</h2>
      <span class="text-light">Use the below form to Update an account</span>
    </div>

    <!-- add user form -->
    <!-- form handling -->
    <form method="POST" id="update_user">
      <div class="new_user">
        <div class="form-group">
          <label for="name" class="text-light">Name</label>
          <input type="hidden" name="id" value="<%= user._id %>" />
          <input
            type="text"
            name="name"
            value="<%= user.name %>"
            placeholder="Mark Stoenis"
          />
        </div>
        <div class="form-group">
          <label for="Address" class="text-light">Address</label>
          <input
            type="text"
            name="address"
            value="<%= user.address%>"
            placeholder="123 Street"
          />
        </div>
        <div class="form-group">
          <label for="dues" class="text-light">Dues</label>
          <div class="radio inline">
            <input type="radio" id="radio-2" name="dues" value="Paid" <%=
            user.dues == 'Paid' ? 'checked' : '' %>>
            <label for="radio-2" class="radio-label">Paid</label>
          </div>
          <div class="radio inline">
            <input type="radio" id="radio-3" name="dues" value="Not Paid" <%=
            user.dues == 'Not Paid' ? 'checked' : '' %> >
            <label for="radio-3" class="radio-label">Not Paid</label>
          </div>
          <label for="area" class="text-light">Area</label>
          <input
            type="number"
            name="area"
            palaceholder="1"
            min="1"
            max="11"
            value="<%= user.area%>"
          />
        </div>

        <div class="form-group">
          <label for="status" class="text-light">Status</label>
          <div class="radio inline">
            <input type="radio" id="radio-4" name="status" value="Active" <%=
            user.status == 'Active' ? 'checked' : '' %> >
            <label for="radio-4" class="radio-label">Active</label>
          </div>
          <div class="radio inline">
            <input type="radio" id="radio-5" name="status" value="Inactive" <%=
            user.status == 'Inactive' ? 'checked' : '' %> >
            <label for="radio-5" class="radio-label">Inactive</label>
          </div>
          <label for="cardNumber" class="text-light">Card Number</label>
          <input
            type="text"
            name="cardNumber"
            placeholder="1001"
            class="formText"
            style="width: 30%"
            value="<%= user.cardNumber %>"
          />
        </div>

        <div class="form-group">
          <label for="status" class="text-light">On/Off Water</label>
          <div class="radio inline">
            <input type="radio" id="radio-6" name="water" value="On" <%=
            user.water == 'On' ? 'checked' : '' %> >
            <label for="radio-6" class="radio-label">On</label>
          </div>
          <div class="radio inline">
            <input type="radio" id="radio-7" name="water" value="Off" <%=
            user.water == 'Inactive' ? 'checked' : '' %> >
            <label for="radio-7" class="radio-label">Off</label>
          </div>
          <label for="cardEnabled" class="text-light">Card Enabled</label>
          <div class="radio inline">
            <input type="radio" id="radio-7" name="cardEnabled" value="Yes" <%=
            user.cardEnabled == 'Yes' ? 'checked' : '' %> >
            <label for="radio-8" class="radio-label">Yes</label>
          </div>
          <div class="radio inline">
            <input type="radio" id="radio-9" name="cardEnabled" value="No" <%=
            user.cardEnabled == 'No' ? 'checked' : '' %> >
            <label for="radio-9" class="radio-label">No</label>
          </div>
        </div>

        <div class="form-group">
          <label for="status" class="text-light">Agreement</label>
          <div class="radio inline">
            <input type="radio" id="radio-10" name="agreement" value="Yes" <%=
            user.agreement == 'Yes' ? 'checked' : '' %>>
            <label for="radio-10" class="radio-label">Yes</label>
          </div>
          <div class="radio inline">
            <input type="radio" id="radio-11" name="agreement" value="No" <%=
            user.agreement == 'No' ? 'checked' : '' %>>
            <label for="radio-11" class="radio-label">No</label>
          </div>
          <label for="registration" class="text-light">Registration</label>
          <input
            type="text"
            name="registration"
            placeholder="Photo Copy"
            value="<%= user.registration%>"
            style="width: 30%"
          />
        </div>
        <%for(var i=0; i < user.boats.length; i++) { %>
        <div class="form-group">
          <label for="wc <%= i+1 %>" class="text-light"
            >Water Craft <%= i+1 %></label
          >
          <input
            type="text"
            name="wc <%= i+1 %>"
            placeholder="Pontoon"
            style="width: 16.5%"
            value="<%= user.boats[i].boat%>"
          />
          <label for="mc<%= i+1 %>Num" class="text-light"
            >MC Number <%= i+1 %></label
          >
          <input
            type="text"
            name="mc<%= i+1 %>Num"
            placeholder="123ABC"
            style="width: 16.5%"
            value="<%= user.boats[i].mc%>"
          />
          <label for="mc<%= i+1 %>Color" class="text-light"
            >MC <%= i+1 %> Color</label
          >
          <input
            type="text"
            name="mc<%= i+1 %>Color"
            placeholder="Red"
            style="width: 16.5%"
            value="<%= user.boats[i].color%>"
          />
        </div>
        <% } %>

        <div class="form-group">
          <button type="submit" class="btn text-dark update">Save</button>
        </div>
      </div>
    </form>
  </div>
</main>
<!-- /Main Site -->

<!-- include footer -->
<%- include('include/_footer') %>
<!-- /include footer -->
